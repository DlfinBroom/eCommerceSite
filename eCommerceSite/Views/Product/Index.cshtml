@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Catalog";
}

<a asp-action="Create" >Create Product</a>

<h1>All available products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category)
            </th>
            @*Add Description*@
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(m => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => product.Category)
                </td>
            </tr>
        }
    </tbody>
</table>


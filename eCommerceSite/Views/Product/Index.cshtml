@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Catalog";
}

<a asp-action="Create" >Create Product</a>

<h1>All available products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category)
            </th>
            @*Add Description*@
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(m => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => product.Category)
                </td>
                <td>
                    <a class="btn btn-secondary" 
                       asp-action="Edit" 
                       asp-route-id="@product.ProductID"
                       >Edit Product</a>

                    <a class="btn btn-danger" 
                       asp-action="Delete" 
                       asp-route-id="@product.ProductID"
                       >Delete Product</a>

                    <a class="btn btn-primary" 
                       asp-action="Add" 
                       asp-controller="Cart" 
                       asp-route-id="@product.ProductID"
                       >Add to Cart</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<ul class="pagination">
    @*Next*@
    @if (1 == (int)ViewData["CurrPageNum"]) {
        <li class="page-item active">
            <span class="page-link">Previous</span>
        </li>
    }
    else {
        int previousPage = (int)ViewData["CurrPageNum"] - 1;
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-id="@previousPage">Previous</a>
        </li>
    }

    @*All Pages*@
    @for (int a = 1; a <= (int)ViewData["MaxPage"]; a++) {
        if (a == (int)ViewData["CurrPageNum"]) {
            <li class="page-item active">
                <span class="page-link">@a</span>
            </li>
        }
        else {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-id="@a">@a</a>
            </li>
        }
    }

    @*Next*@
    @if ((int)ViewData["CurrPageNum"] == (int)ViewData["MaxPage"]) {
        <li class="page-item active">
            <span class="page-link">Next</span>
        </li>
    }
    else {
        int nextPage = (int)ViewData["CurrPageNum"] + 1;
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-id="@nextPage">Next</a>
        </li>
    }
</ul>